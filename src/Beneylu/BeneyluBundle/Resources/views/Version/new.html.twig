{% extends "BeneyluBundle::layout.html.twig" %}

{% block body -%}
    <h1>Version creation</h1>

    <a href="{{ path('version') }}" class="btn btn-default">
        Back to the list
    </a>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {# Génération du label. #}
        {{ form_label(form.software, "Software", {'label_attr': {'class': 'col-sm-3 control-label no-padding-right'}}) }}

        {# Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(form.software) }}

        <div class="col-sm-9">
            {# Génération de l'input. #}
            {{ form_widget(form.software, {'attr': {'class': 'ace input-lg'}}) }}
        </div>
    </div>

    <div class="form-group">
        {# Génération du label. #}
        {{ form_label(form.reference, "Reference", {'label_attr': {'class': 'col-sm-3 control-label no-padding-right'}}) }}

        {# Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(form.reference) }}

        <div class="col-sm-9">
            {# Génération de l'input. #}
            {{ form_widget(form.reference, {'attr': {'class': 'input-lg'}}) }}
        </div>
    </div>

    <div class="form-group">
        {# Génération du label. #}
        {{ form_label(form.latest, "Latest", {'label_attr': {'class': 'col-sm-3 control-label no-padding-right'}}) }}

        {# Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(form.latest) }}

        <div class="col-sm-9">
            {# Génération de l'input. #}
            {{ form_widget(form.latest, {'attr': {'class': 'ace input-lg'}}) }}
        </div>
    </div>



    {{ form_rest(form) }}
    {{ form_end(form) }}        
{% endblock %}
