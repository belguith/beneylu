{% extends "BeneyluBundle::layout.html.twig" %}

{% block body -%}




    <h1 class="header smaller lighter blue">Software edit</h1>






    <div class=" pull-right">
        {{ form_start(delete_form, {'attr': {'class': 'form-horizontal'}} ) }}

        {{ form_widget(delete_form.submit,{'attr': {'class': 'btn btn-danger'}} )}}
        {{ form_rest(delete_form) }}
        <a href="{{ path('software') }}" class="btn btn-default">
            Back to the list
        </a>
        {{ form_end(delete_form) }}

    </div>
    <br/>
    <br/>
    <br/>


    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(edit_form) }}

    <div class="form-group">
        {# Génération du label. #}
        {{ form_label(edit_form.name, "Software Name", {'label_attr': {'class': 'col-sm-3 control-label no-padding-right'}}) }}

        {# Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(edit_form.name) }}

        <div class="col-sm-9">
            {# Génération de l'input. #}
            {{ form_widget(edit_form.name, {'attr': {'class': 'input-lg'}}) }}
        </div>
    </div>

    <div class="form-group">
        {# Génération du label. #}
        {{ form_label(edit_form.os, "Software OS", {'label_attr': {'class': 'col-sm-3 control-label no-padding-right'}}) }}

        {# Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(edit_form.os) }}

        <div class="col-sm-9">
            {# Génération de l'input. #}
            {{ form_widget(edit_form.os, {'attr': {'class': 'input-lg'}}) }}
        </div>
    </div>

    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            {{ form_widget(edit_form.submit, {'attr': {'class': 'btn btn-primary'}}) }}

            <button class="btn" type="reset">
                <i class="ace-icon fa fa-undo bigger-110"></i>
                Reset
            </button>
        </div>
    </div>
    {{ form_rest(edit_form) }}
    {{ form_end(edit_form) }}



{% endblock %}
