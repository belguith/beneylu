{% extends "BeneyluBundle::layout.html.twig" %}

{% block body -%}
    





    <div class="pull-right">
        {{ form_start(delete_form, {'attr': {'class': 'form-horizontal'}} ) }}
        <a href="{{ path('software') }}" class="btn btn-default">
            Back to the list
        </a>
        <a href="{{ path('software_edit', { 'id': entity.id }) }}" class="btn btn-info">
            Edit
        </a>
        {{ form_widget(delete_form.submit,{'attr': {'class': 'btn btn-danger'}} )}}
        {{ form_rest(delete_form) }}

        {{ form_end(delete_form) }}   

    </div>

    <div class="row">
        <div class="col-sm-3">
            <div class="row">

                <h1 class="header smaller lighter blue">Software Info </h1>

            </div>

            <div>
                <ul class="list-unstyled spaced">
                    <li>
                        <i class="ace-icon fa fa-caret-right blue"></i> <big> {{ entity.name }}</big>
                    </li>

                    <li>
                        <i class="ace-icon fa fa-caret-right blue"></i> <big>{{ entity.os }}</big>
                    </li>


                </ul>
            </div>
        </div><!-- /.col -->

        <div class="col-sm-9">

            <div>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th class="center">#</th>
                            <th>Version</th>
                            <th class="hidden-xs">Latest</th>


                        </tr>
                    </thead>

                    <tbody>
                        {% for version in entity.versions%}
                            <tr>
                                <td class="center">{{version.id}}</td>

                                <td>
                                    <a href="#">{{version.reference}}</a>
                                </td>
                                <td class="hidden-xs">
                                    {% if version.latest %}
                                        <span class="label label-sm label-success">Latest One</span>
                                    {% else %}
                                        <span class="label label-sm label-warning">Deprecated</span>
                                    {% endif %}
                                </td>


                            </tr>

                        {% endfor %}




                    </tbody>
                </table>
            </div>

        </div>


    </div>



{% endblock %}
