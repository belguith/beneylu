{% extends "BeneyluBundle::layout.html.twig" %}

{% block body -%}
    <h1 class="header smaller lighter blue">Install a software on a Device</h1>

    <a href="{{ path('device') }}" class="btn btn-default pull-right">
        Back to the list
    </a>
    <br/>
    <br/>
    <br/>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}

    <div class="form-group hidden">
        {# Génération du label. #}
        {{ form_label(form.date, "Device", {'label_attr': {'class': 'col-sm-3 control-label no-padding-right'}}) }}

        {# Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(form.date) }}

        <div class="col-sm-9">
            {# Génération de l'input. #}
            {{ form_widget(form.date, {'attr': {'class': 'input-lg'}}) }}
        </div>
    </div>

    <div class="form-group">
        {# Génération du label. #}
        {{ form_label(form.device, "Software", {'label_attr': {'class': 'col-sm-3 control-label no-padding-right'}}) }}

        {# Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(form.device) }}

        <div class="col-sm-9">
            {# Génération de l'input. #}
            {{ form_widget(form.device, {'attr': {'class': 'input-lg'}}) }}
        </div>
    </div>


    <div class="form-group">
        {# Génération du label. #}
        {{ form_label(form.software, "Version", {'label_attr': {'class': 'col-sm-3 control-label no-padding-right'}}) }}

        {# Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(form.software) }}

        <div class="col-sm-9">
            {# Génération de l'input. #}
            {{ form_widget(form.software, {'attr': {'class': 'input-lg'}}) }}
        </div>
    </div>


    <div class="form-group">
        {# Génération du label. #}
        {{ form_label(form.version, "Device OS", {'label_attr': {'class': 'col-sm-3 control-label no-padding-right'}}) }}

        {# Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(form.version) }}

        <div class="col-sm-9">
            {# Génération de l'input. #}
            {{ form_widget(form.version, {'attr': {'class': 'input-lg'}}) }}
        </div>
    </div>

    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}

            <button class="btn" type="reset">
                <i class="ace-icon fa fa-undo bigger-110"></i>
                Reset
            </button>
        </div>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}


</ul>
{% endblock %}
